# Chat Yapper Environment Configuration
# Copy this file to .env and fill in your actual values

# Twitch OAuth Configuration
# Create a Twitch app at: https://dev.twitch.tv/console/apps
# Set redirect URL to: http://localhost:{PORT}/auth/twitch/callback (use actual PORT value)
# If using default port, set to: http://localhost:8000/auth/twitch/callback
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Database Configuration (optional)
# DB_PATH=custom_database_path.db

# Development Configuration (optional)
# PORT=8000
# HOST=0.0.0.0
# DEBUG=true
# FRONTEND_PORT=5173