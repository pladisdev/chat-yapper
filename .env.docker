# Docker-specific .env example
# Copy this to .env and fill in your credentials

# Application Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Twitch OAuth Configuration
# Get these from: https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# YouTube OAuth Configuration  
# Get these from: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Data Paths (Docker volumes)
DB_PATH=/data/app.db
AUDIO_DIR=/app/audio

# Optional: Frontend Development Port
FRONTEND_PORT=5173
